<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Redirigir todas las solicitudes a la API al puerto donde corre PM2 -->
        <rule name="API Proxy" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^soe.univalle\.edu$" />
            <add input="{REQUEST_URI}" pattern="^/api/(.*)" />
          </conditions>
          <action type="Rewrite" url="http://localhost:3001/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Permitir que PM2 maneje los errores de la API -->
    <httpErrors existingResponse="PassThrough" />

    <!-- ConfiguraciÃ³n de seguridad -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>

